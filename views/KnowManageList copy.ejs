<%- include("./Back/Foster.txt") %>

  <!-- 內頁 -->
  <div class="content-wrapper">
    <section class="content">
      <h3 class="title">毛孩知識管理</h3>
      <div class="row">

        <!-- 查詢條件 -->
        <div class="col-xs-12">
          <div class="search">
            <!-- 標題 -->
            <div class="col-xs-12 col-sm-6 col-md-3">
              <div class="form-group">
                <label>標題：</label>
                <input type="text" name="NewsTitle" class="form-control" id="">

              </div>
            </div>

            <!-- 換行 -->
            <div class="clearfix"></div>

            <!-- 發佈日期 -->
            <div class="col-xs-12 col-sm-6 col-md-3">
              <label>發佈日期：</label>
            </div>
            <div class="clearfix"></div>
            <!-- 發佈日期 -->
            <div class="col-xs-12 col-sm-6 col-md-3">
              <div class="form-group">
                <input name="ShowStartDate" type="date" class="form-control inputNotOutline" name="ShowEndDate">
              </div>
            </div>

            <!-- 換行 -->
            <div class="clearfix"></div>

            <!-- 查詢/清除 -->
            <div class="col-xs-12 text-right">
              <button type="button" class="btn btn-primary">查詢</button>
              <button type="button" class="btn btn-primary">清除</button>
            </div>
            <div class="clearfix"></div>

          </div>
        </div>

        <!-- 新增 -->
        <div class="col-xs-12 addBtn">
          <a href="/BackKnowManage/KnowManageAdd?pageNo=<%= pageNo %>" title="新增">
            <input type="button" class="btn btn-success" value="新增">
          </a>
        </div>

        <div class="clearfix"></div>
        <!-- 查詢結果 -->
        <div class="col-xs-12">
          <div class="table-responsive">
            <table class="table table-striped">

              <thead>
                <tr class="" style="background-color: #3c8dbc; color: white">
                  <th scope="col-2">編號</th>
                  <th scope="col-6">標題</th>
                  <th scope="col-2">發佈日期</th>
                  <th scope="col-2">管理</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i<data.length; i++) { %>
                  <tr>
                    <td scope="row">
                      <%= i+1 %>
                    </td>
                    <td>
                      <%= data[i].ArticleTitle %>
                    </td>
                    <td>
                      <%= (data[i].ArticleDate).toLocaleDateString() %>
                    </td>
                    <td>
                      <a href="/BackKnowManage/KnowManageEdit?id=<%= data[i].ArticleId %>&pageNo=<%= pageNo %>">
                        <input type="button" class="btn btn-primary" value="編輯">
                      </a>
                      <a href="/BackKnowManage/KnowManageDel?id=<%= data[i].ArticleId %>&pageNo=<%= pageNo %>"
                        title="刪除">
                        <a href="/BackKnowManage/KnowManageDel?id=<%= data[i].ArticleId %>&pageNo=<%= pageNo %>"
                          title="刪除">
                          <input type="button" class="btn btn-danger" value="刪除">
                        </a>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </div>


          <!-- 頁碼 -->
          <nav aria-label="Page navigation" class="text-right">
            <ul class="pagination">

              <!-- 上一頁 -->
              <li class="">
                <a class="" href="/BackKnowManage/KnowManageList?pageNo=<%= (pageNo-1) %>" title="上一頁"" aria-label="
                  Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>

              <!-- 頁碼 -->
              <% for(var i=1; i <=totalPage; i++) { %>
                <li class="page-item"><a class="page-link" href="/BackKnowManage/KnowManageList?pageNo=<%= i%>">
                    <%= i%>
                  </a>
                </li>
                <% } %>

                  <!-- 下一頁 -->
                  <li class="">
                    <a class="" href="/BackKnowManage/KnowManageList?pageNo=<%= (pageNo+1) %>" title="下一頁"
                      aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                    </a>
                  </li>
            </ul>
          </nav>

        </div>

      </div>
    </section>
  </div>

  <%- include("./Back/Foot.txt") %>