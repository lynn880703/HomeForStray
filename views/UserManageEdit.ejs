<%- include("./Back/User.txt") %>

  <!-- 內頁 -->
  <div class="content-wrapper">
    <section class="content">
      <h3 class="title">會員資料管理</h3>
      <form action="" id="News" name="News" method="POST" class="table-responsive">

        <table class=" table table-striped">
          <!-- 會員編號 -->
          <tr class="">
            <th scope="col" style="vertical-align: middle;">
              會員編號
            </th>
            <td>
              <div class="col-xs-12 col-sm-6 col-md-3">
                <%= (data[0].MemberID) %>
              </div>
            </td>
          </tr>
          <!-- 註冊日期 -->
          <tr class="">
            <th scope="col" style="vertical-align: middle;">
              註冊日期
            </th>
            <td style="vertical-align: middle;">
              <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="form-group">
                  <%= (data[0].RegistrationDate).toLocaleDateString() %>
                </div>
              </div>
            </td>
          </tr>
          <!-- 帳號(信箱) -->
          <tr class="">
            <th scope="col" style="vertical-align: middle;">
              帳號(信箱)
            </th>
            <td>
              <div class="col-xs-12 col-sm-6 col-md-3">
                <%= data[0].Email %>
              </div>
            </td>
          </tr>
          <!-- 手機 -->
          <!-- 姓名 -->
          <tr class="">
            <th scope="col" style="vertical-align: middle;">
              姓名
            </th>
            <td>
              <div class="col-xs-12 col-sm-6 col-md-3">
                <%= data[0].MemberName %>
              </div>
            </td>
          </tr>
          <!-- 手機 -->
          <tr class="">
            <th scope="col" style="vertical-align: middle;">
              手機
            </th>
            <td>
              <div class="col-xs-12 col-sm-6 col-md-3">
                <%= data[0].CellPhone %>
              </div>
            </td>
          </tr>


        </table>


        <div class="col-xs-12">
          <div class="search">

            <!-- 會員狀態 -->
            <div class=" col-xs-12 col-sm-6 col-md-3">
              <div class="form-group">
                <label>會員狀態</label>
                <div class="clearfix"></div>

                <label for="memberState_1">
                  <input type="radio" id="memberState_1" name="memberState" value="1" <%=( data[0].memberState==1 )
                    ? 'checked' :'' %> >
                  使用中
                </label>

                <label for="memberState_0">
                  <input type="radio" id="memberState_0" name="memberState" value="0" <%=( data[0].memberState==0 )
                    ? 'checked' :'' %> >

                  停權中</label>
                <div class="clearfix"></div>


              </div>
            </div>


            <!-- 確認修改/返回 -->

            <div class="col-xs-12 text-right">

              <button type="submit" class="btn btn-primary">確認修改</button>
              <a href="/BackUserManage/UserManageList?pageNo=<%=pageNo%>">
                <button type="button" class="btn btn-primary">返回</button>
              </a>
            </div>
            <div class="clearfix"></div>


          </div>
        </div>







      </form>
    </section>
  </div>
  </div>

  <%- include("./Back/Foot.txt") %>