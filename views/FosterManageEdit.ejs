<%- include("./Back/Foster.txt") %>

    <!-- 內頁 -->
    <div class="content-wrapper">
        <section class="content">
            <h3 class="title">會員資料管理</h3>
            <form action="" id="News" name="News" method="POST" class="table-responsive">


                <!-- 不可編輯區 -->
                <table class=" table table-striped">
                    <!-- 刊登資訊 -->
                    <tr class="">
                        <th scope="col" class="table-title"
                            style="vertical-align: middle; background-color:#79ABD1 ;  ;" colspan="4">
                            刊登資訊
                        </th>

                    </tr>
                    <!-- 會員刊登日期 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            刊登日期
                        </th>
                        <td colspan="3">
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= (data[0].AdoptDate).toLocaleDateString() %>
                            </div>
                        </td>
                    </tr>
                    <!-- 毛孩資訊 -->
                    <tr class="">
                        <th scope="col" class="table-title" style="vertical-align: middle;" colspan="4">
                            毛孩資訊
                        </th>

                    </tr>
                    <!-- 寵物暱稱 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            寵物暱稱 </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <div class="form-group">
                                    <%= data[0].PetName %>
                                </div>
                            </div>
                        </td>
                        <!-- 種類 -->
                        <th scope="col" style="vertical-align: middle;">
                            種類 </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].PetBreed %>
                            </div>
                        </td>

                    </tr>


                    <!-- 品種 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            品種
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].BodyType %>
                            </div>
                        </td>

                        <!--  體型 -->
                        <th scope="col" style="vertical-align: middle;">
                            體型
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].PetFur %>
                            </div>
                        </td>
                    </tr>

                    <!-- 毛色 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            毛色
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].PetAge %>
                            </div>
                        </td>
                        <!--  年紀 -->
                        <th scope="col" style="vertical-align: middle;">
                            年紀
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].PetGender %>
                            </div>

                        </td>
                    </tr>
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            性別
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].Neuter %>
                            </div>
                        </td>
                        <!-- 結紮狀況 -->
                        <th scope="col" style="vertical-align: middle;">
                            結紮狀況
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].Neuter %>
                            </div>
                        </td>


                    </tr>

                    <!-- 是否有晶片 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            是否有晶片
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].Microchip %>
                            </div>
                        </td>
                        <!-- 照片 -->
                        <th scope="col" style="vertical-align: middle;" rowspan="4">
                            照片 </th>
                        <td rowspan="4">
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <!-- 隱藏img -->
                                <img src="" alt="" id="outputImg" height="100" style="display:none">
                                <!-- 隱藏img end -->

                                <!-- <label for="uploadImg" class="TitleButton uploadImg">
                    <input type="file" style="display:none;" accept=".jpg, .jpeg, .png" id="uploadImg"
                        name="uploadImg" onchange="openFile(event)">上傳圖片
                </label>
                <input type="button" class="TitleButton" value="刪除圖片" id="deleteImg"> -->
                            </div>
                        </td>
                    </tr>


                    <!-- 寵物描述 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            寵物描述
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].PetDes %>
                            </div>
                        </td>

                    </tr>


                    <!-- 縣市 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            縣市
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].CityId %>
                            </div>
                    </tr>
                    <!-- 刊登資訊 -->
                    <tr class="">
                        <th scope="col" class="table-title" style="vertical-align: middle;" colspan="4">
                            聯絡資訊
                        </th>

                    </tr>
                    <!-- 聯絡人 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            聯絡人
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].ContactPerson %>
                            </div>
                        </td>
                        <!-- 聯絡電話 -->
                        <th scope="col" style="vertical-align: middle;">
                            聯絡電話
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].ContactPhone %>
                            </div>
                        </td>
                    </tr>





                </table>


                <div class="col-xs-12">
                    <div class="search">

                        <!-- 審核結果 -->
                        <div class=" col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label>審核結果</label>
                                <div class="clearfix"></div>

                                <label for="memberState_1">
                                    <input type="radio" id="memberState_1" name="AdoptState" value="1"
                                        <%=(data[0].AdoptState==1 ) ? 'checked' : '' ; %> >已批准
                                    <input type="radio" id="memberState_1" name="AdoptState" value="0"
                                        <%=(data[0].AdoptState==1 ) ? '' : 'checked' ; %> >未批准

                                </label>
                            </div>
                        </div>


                        <!-- 確認修改/返回 -->

                        <div class="col-xs-12 text-right">
                            <input type="submit" class="btn btn-primary" value="審核">
                            <input type="text" style="display: none;" id="PetDeleInput" name="PetId" value="<%= data[0].PetId
                                %>">

                            <!-- <button type="submit" class="btn btn-primary" name="PetId"
                                value="<%= data[0].PetId %>">審核</button> -->

                            <a href="/BackFosterManage/FosterManageList">
                                <button type="button" class="btn btn-primary">返回</button>
                            </a>
                        </div>
                        <div class="clearfix"></div>


                    </div>
                </div>







            </form>
        </section>
    </div>
    </div>



    <%- include("./Back/Foot.txt") %>